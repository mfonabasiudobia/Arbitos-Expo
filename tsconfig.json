{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"], // Add your aliases here
      "@components": ["./src/components/index.ts"], // Add your aliases here
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"],
      "@lib/*": ["./src/lib/*"],
      "@redux/*": ["./src/redux/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@src/*": ["./src/*"],
      "@theme": ["./src/theme/index.ts"]
    }
  },
}
